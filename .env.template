# BenchBase Workload Configuration Template
# Copy this file to .env and fill in your values

# PostgreSQL Database Configuration
TUNING_POSTGRES_HOST=localhost
TUNING_POSTGRES_PORT=5432
TUNING_POSTGRES_DB=benchbase
TUNING_POSTGRES_USER=postgres
TUNING_POSTGRES_PASSWORD=password

# Benchmark Configuration
# Available benchmarks: epinions, tpcc, tpch, tpch5, resourcestresser
BENCHMARK=epinions
BENCHMARK_WORK_RATE=50 # int or "unlimited"

# BENCHMARK_VARIATION= # Not in use really
WARMUP_TIME_SECONDS=30
SKIP_CREATE_AND_LOAD=false
